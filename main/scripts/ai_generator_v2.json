{
  "name": "ChroLens Mimic 指令生成器 - AI 專用 v2.1 (修正版)",
  "rules": {
    "core_syntax": [
      "所有動作必須以 > 開頭 (標籤除外)",
      "標籤定義格式為 #標籤名稱",
      "每個動作末尾必須包含 , T=0s000 (腳本累積時間)",
      "滑鼠/鍵盤動作可包含 , 延遲50ms"
    ],
    "commands": {
      "mouse": [
        ">左鍵點擊(x,y), 延遲50ms, T=0s000",
        ">右鍵點擊(x,y), 延遲50ms, T=0s000",
        ">移動至(x,y), 延遲0ms, T=0s000",
        ">左鍵點擊>圖片名, T=0s000",
        ">移動至>圖片名, T=0s000"
      ],
      "keyboard": [
        ">按鍵名, 延遲50ms, T=0s000 (例如: >按k, >按enter)",
        ">按下鍵名, T=0s000",
        ">放開鍵名, T=0s000",
        ">輸入文字>Hello, T=0s000"
      ],
      "conditionals": [
        "#標籤A",
        ">if>pic01, T=0s000",
        ">>#找到時跳至標籤",
        ">>>#未找到時跳至標籤",
        ">if全部存在>pic01,pic02, T=0s000",
        ">if任一存在>pic01,pic02, T=0s000"
      ],
      "variables": [
        ">設定變數>var, 0, T=0s000",
        ">變數加1>var, T=0s000",
        ">if變數>var, >=, 10, T=0s000"
      ],
      "loops": [
        ">重複>10次, T=0s000",
        ">重複結束, T=0s000",
        ">當圖片存在>pic01, T=0s000",
        ">循環結束, T=0s000"
      ]
    },
    "output_constraints": [
      "只輸出代碼塊，無註解",
      "標籤用中文語意化",
      "時間隨行遞增 (T=0s000, T=0s100...)",
      "if 後必須接 >>#標籤 和 >>>#標籤"
    ]
  }
}
